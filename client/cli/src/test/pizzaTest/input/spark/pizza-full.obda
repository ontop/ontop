[PrefixDeclaration]
:		http://www.co-ode.org/ontologies/pizza/pizza.owl#
dc:		http://purl.org/dc/elements/1.1/
owl:		http://www.w3.org/2002/07/owl#
rdf:		http://www.w3.org/1999/02/22-rdf-syntax-ns#
xml:		http://www.w3.org/XML/1998/namespace
xsd:		http://www.w3.org/2001/XMLSchema#
foaf:		http://xmlns.com/foaf/0.1/
obda:		https://w3id.org/obda/vocabulary#
rdfs:		http://www.w3.org/2000/01/rdf-schema#
skos:		http://www.w3.org/2004/02/skos/core#
pizza:		http://www.co-ode.org/ontologies/pizza/
terms:		http://purl.org/dc/terms/

[MappingDeclaration] @collection [[
mappingId	pizza-FourSeasons
target		:{pizzaID} a :FourSeasons ; rdfs:label {menuName}@en ; :menuNumber {menuNumber}^^xsd:integer .
source		SELECT * FROM pizzaDB.pizza WHERE  menuName = 'FourSeasons';

mappingId	pizza-Margherita
target		:{pizzaID} a :Margherita ; rdfs:label {menuName}@en ; :menuNumber {menuNumber}^^xsd:integer .
source		SELECT * FROM pizzaDB.pizza WHERE  menuName = 'Margherita';

mappingId	pizza-Veneziana
target		:{pizzaID} a :Veneziana ; rdfs:label {menuName}@en ; :menuNumber {menuNumber}^^xsd:integer .
source		SELECT * FROM pizzaDB.pizza WHERE  menuName = 'Veneziana';

mappingId	pizza-Pizza(General)
target		:{pizzaID} a :Pizza ; rdfs:label {menuName}@en . 
source		SELECT * FROM pizzaDB.pizza;

mappingId	measures
target		:{pizzaID} :hasSensorMeasure :{measureID} . :{measureID} a :SensorMeasure ; :value {value}^^xsd:decimal ; :capturedAt {timestamp}^^xsd:dateTime ; :detectedBy :{sensorID} . 
source		SELECT * FROM pizzaDB.measures;

mappingId	sensor-TemperatureSensor
target		:{sensorID} a :TemperatureSensor ; :isEnabled {enabled}^^xsd:boolean .
source		SELECT * FROM pizzaDB.sensor WHERE  measureType = 'TEMPERATURE';

mappingId	sensor-HumiditySensor
target		:{sensorID} a :HumiditySensor ; :isEnabled {enabled}^^xsd:boolean .
source		SELECT * FROM pizzaDB.sensor WHERE  measureType = 'HUMIDITY';

mappingId	sensor-CO2Sensor
target		:{sensorID} a :CO2Sensor ; :isEnabled {enabled}^^xsd:boolean .
source		SELECT * FROM pizzaDB.sensor WHERE  measureType = 'CO2';
]]

