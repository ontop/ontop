<?xml version="1.0"?>
<assembly>
	<id>cli</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${maven.multiModuleProjectDirectory}/licenses</directory>
			<outputDirectory>/copyright</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<!--Create empty jdbc folder-->
		<fileSet>
			<directory>${maven.multiModuleProjectDirectory}/build/distribution/src/main/resources/</directory>
			<outputDirectory>/jdbc</outputDirectory>
			<includes>
				<include>DROP_YOUR_JDBC_DRIVERS_IN_THIS_DIR.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${maven.multiModuleProjectDirectory}/build/distribution/src/main/resources/log
			</directory>
			<outputDirectory>/log</outputDirectory>
			<includes>
				<include>logback.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${maven.multiModuleProjectDirectory}/client/cli/src/main/resources/
			</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README.md</include>
				<include>ontop</include>
				<include>ontop.bat</include>
				<include>ontop-completion.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${maven.multiModuleProjectDirectory}/engine/owlapi/src/main/resources/
			</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<excludes>
				<exclude>com.h2database:h2*</exclude>
				<exclude>*:ontop-distribution:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
