<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>it.unibz.inf.ontop</groupId>
        <artifactId>ontop-protege</artifactId>
        <version>5.2.1-SNAPSHOT</version>
    </parent>

    <artifactId>ontop-protege-distribution</artifactId>
    <description>Builds the distribution files for quest and the core apis.</description>

    <properties>
        <!-- Build-related properties -->
        <maven.deploy.skip>true</maven.deploy.skip>
        <assembly.appendAssemblyId>false</assembly.appendAssemblyId>
        <assembly.attach>false</assembly.attach>
    </properties>

    <dependencies>
        <dependency>
            <!-- just for sorting this module after ontop-protege-plugin -->
            <groupId>${project.groupId}</groupId>
            <artifactId>ontop-protege-plugin</artifactId>
            <exclusions>
                <exclusion>
                    <artifactId>*</artifactId>
                    <groupId>*</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ontop-owlapi</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>ontop-rdf4j</artifactId>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>__auto_download_protege_from_url__</id>
            <activation>
                <property>
                    <name>protege.bnd.source</name>
                    <value>!repository</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.googlecode.maven-download-plugin</groupId>
                        <artifactId>download-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unpack-protege-platform-independent</id>
                                <phase>${asset-protege.phase-prefix}prepare-package</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${protege.bnd.url-plat-ind}</url>
                                    <unpack>true</unpack>
                                    <outputDirectory>${project.build.directory}/unpack/protege-desktop-platform-independent/</outputDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack-protege-macos</id>
                                <phase>${asset-protege.phase-prefix}prepare-package</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${protege.bnd.url-macos}</url>
                                    <unpack>true</unpack>
                                    <outputDirectory>${project.build.directory}/unpack/protege-desktop-macos/</outputDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack-protege-win</id>
                                <phase>${asset-protege.phase-prefix}prepare-package</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${protege.bnd.url-win}</url>
                                    <unpack>true</unpack>
                                    <outputDirectory>${project.build.directory}/unpack/protege-desktop-win/</outputDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>unpack-protege-linux</id>
                                <phase>${asset-protege.phase-prefix}prepare-package</phase>
                                <goals>
                                    <goal>wget</goal>
                                </goals>
                                <configuration>
                                    <url>${protege.bnd.url-linux}</url>
                                    <unpack>true</unpack>
                                    <outputDirectory>${project.build.directory}/unpack/protege-desktop-linux/</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>__auto_download_protege_from_repository__</id>
            <activation>
                <property>
                    <name>protege.bnd.source</name>
                    <value>repository</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>unpack-protege</id>
                                <phase>${asset-protege.phase-prefix}prepare-package</phase>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>edu.stanford.protege</groupId>
                                            <artifactId>protege-desktop</artifactId>
                                            <version>${protege.bnd.version}</version>
                                            <classifier>platform-independent</classifier>
                                            <type>zip</type>
                                            <outputDirectory>${project.build.directory}/unpack/protege-desktop-platform-independent/</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>edu.stanford.protege</groupId>
                                            <artifactId>protege-desktop</artifactId>
                                            <version>${protege.bnd.version}</version>
                                            <classifier>os-x</classifier>
                                            <type>zip</type>
                                            <outputDirectory>${project.build.directory}/unpack/protege-desktop-macos/</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>edu.stanford.protege</groupId>
                                            <artifactId>protege-desktop</artifactId>
                                            <version>${protege.bnd.version}</version>
                                            <classifier>win</classifier>
                                            <type>zip</type>
                                            <outputDirectory>${project.build.directory}/unpack/protege-desktop-win/</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>edu.stanford.protege</groupId>
                                            <artifactId>protege-desktop</artifactId>
                                            <version>${protege.bnd.version}</version>
                                            <classifier>linux</classifier>
                                            <type>tar.gz</type>
                                            <outputDirectory>${project.build.directory}/unpack/protege-desktop-linux/</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-protege-plugin</id>
                        <!-- We enable this plugin only when just -Passet-plugin is enabled, as this step is fast and ensures
                             that plugin and Protégé bundles are placed in the same 'protege/distribution' directory and that
                             the plugin file there has the correct name without the '-bundle' classifier in it -->
                        <phase>${asset-plugin.phase-prefix}prepare-package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/</outputDirectory>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>ontop-protege-plugin</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>bundle</classifier>
                                    <destFileName>it.unibz.inf.ontop.protege-${project.version}.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-protege-bundle-platform-independent</id>
                        <phase>${asset-protege.phase-prefix}package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/ontop-protege-bundle-platform-independent.xml</descriptor>
                            </descriptors>
                            <finalName>ontop-protege-bundle-platform-independent-${project.version}</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>attach-protege-bundle-win</id>
                        <phase>${asset-protege.phase-prefix}package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/ontop-protege-bundle-win.xml</descriptor>
                            </descriptors>
                            <finalName>ontop-protege-bundle-win-${project.version}</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>attach-protege-bundle-linux</id>
                        <phase>${asset-protege.phase-prefix}package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/ontop-protege-bundle-linux.xml</descriptor>
                            </descriptors>
                            <finalName>ontop-protege-bundle-linux-${project.version}</finalName>
                        </configuration>
                    </execution>
                    <execution>
                        <id>attach-protege-bundle-macos</id>
                        <phase>${asset-protege.phase-prefix}package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/assembly/ontop-protege-bundle-macos.xml</descriptor>
                            </descriptors>
                            <finalName>ontop-protege-bundle-macos-${project.version}</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
