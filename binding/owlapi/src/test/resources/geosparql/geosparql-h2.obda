[PrefixDeclaration]
:		http://ex.org/
xsd:    http://www.w3.org/2001/XMLSchema#
geo:    http://www.opengis.net/ont/geosparql#
geof:   http://www.opengis.net/def/function/geosparql/
rdfs:   http://www.w3.org/2000/01/rdf-schema#

[MappingDeclaration] @collection [[
mappingId	geoms
target		:{ID} a :Geom ; geo:asWKT {THE_NEW_GEOM}^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT *, ST_SETSRID(THE_GEOM,'4326') AS THE_NEW_GEOM FROM GEOMS;

mappingId	geoms
target		:crs84/{ID} a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/OGC/1.3/CRS84> {THE_GEOM}"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM GEOMS WHERE ID=3

mappingId	geoms
target		:epsg3044/21 a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/EPSG/0/3044> {THE_GEOM}"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM GEOMS WHERE ID=21

mappingId	geoms
target		:crs84/{ID} a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/OGC/1.3/CRS84> {THE_GEOM}"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM GEOMS WHERE ID=22

mappingId	geoms
target		:crs84/{ID} a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/OGC/1.3/CRS84> {THE_GEOM}"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM GEOMS WHERE ID=23

mappingId	geoms
target		:epsg4326/{ID} a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/EPSG/0/4326> {THE_GEOM}"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM GEOMS WHERE ID=24

mappingId	geoms
target		:epsg4326/{ID} a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/EPSG/0/4326> {THE_GEOM}"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM GEOMS WHERE ID=25

mappingId	geoms
target		:epsg3044/{ID} a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/EPSG/0/3044> {THE_GEOM}"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM GEOMS WHERE ID=26

mappingId	geoms
target		:crs84/{ID} a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/OGC/1.3/CRS84> {THE_NEW_GEOM}"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT *, ST_SETSRID(THE_GEOM,'4326') AS THE_NEW_GEOM FROM GEOMS WHERE ID=27

mappingId	points
target		:point/{ID} a :Geom ; geo:asWKT "POINT ({longitude} {latitude})"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM POINTS

mappingId	geoms
target		:point/epsg3044/21 a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/EPSG/0/3044> POINT ({longitude} {latitude})"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM POINTS WHERE ID=21

mappingId	geoms
target		:point/epsg3044/26 a :Geom ; geo:asWKT "<http://www.opengis.net/def/crs/EPSG/0/3044> POINT ({longitude} {latitude})"^^geo:wktLiteral ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM POINTS WHERE ID=26

mappingId	features
target		:feature/{ID} a :Feature ; geo:hasGeometry :geomid/{GID} ; rdfs:label {NAME}^^xsd:string .
source		SELECT * FROM FEATURES

mappingId	features
target		:geomid/{GID} a :Geom ; geo:asWKT {THE_NEW_GEOM}^^geo:wktLiteral .
source		SELECT *, ST_SETSRID(THE_GEOM, '4326') AS THE_NEW_GEOM FROM FEATURES

mappingId	rivers
target		:rivers/{id} a :River ; geo:asWKT "<http://www.opengis.net/def/crs/EPSG/0/4326> POINT ({lon} {lat})"^^geo:wktLiteral .
source		SELECT id, lon, lat from rivers

mappingId	lakes
target		:lakes/{id} a :Lake ; geo:asWKT "<http://www.opengis.net/def/crs/EPSG/0/4326> POINT ({lon} {lat})"^^geo:wktLiteral .
source		SELECT id, lon, lat from lakes
]]

